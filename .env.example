# Server
PORT=8080
# Host port mapping for docker-compose
HTTP_PORT=8080
TRUST_PROXY=1
REQUEST_BODY_LIMIT=2mb

# Security
# Optional Basic Auth for the API
# BASIC_AUTH_USER=api
# BASIC_AUTH_PASS=strong-password

# Optional IP allowlist (comma-separated IPs or CIDRs). Empty to allow all.
# IP_ALLOWLIST=127.0.0.1,10.0.0.0/8,::1

# CORS origins (comma-separated). Empty allows all.
# CORS_ORIGINS=https://your-frontend.example,https://admin.example

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=30

# Idempotency TTL in seconds (cache window)
IDEMPOTENCY_TTL_SECONDS=600

# Metrics
ENABLE_METRICS=false

# Logging
LOG_LEVEL=info

# SMTP modes policy (optional). Comma-separated list of allowed modes.
# Valid entries: "465-tls" for SMTPS over 465, "25-starttls" or "2525-starttls" for STARTTLS.
# If empty, all modes are allowed.
#SMTP_ALLOWED_MODES=465-tls,2525-starttls
